<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.client.controller.MainController">
    <children>
        <Button fx:id="btn" layoutX="362.0" layoutY="285.0" mnemonicParsing="false" onMouseClicked="#initTable"
                text="Button"/>
        <TreeTableView fx:id="treeTableView" layoutX="34.0" layoutY="50.0" prefHeight="221.0" prefWidth="733.0"/>
        <HBox layoutX="34.0" layoutY="330.0" prefHeight="239.0" prefWidth="733.0">
            <children>
                <Pane fx:id="paneProperty" prefHeight="239.0" prefWidth="275.0" visible="false">
                    <children>
                        <Label layoutX="25.0" layoutY="72.0" prefHeight="21.0" prefWidth="119.0"
                               text="Время занятости"/>
                        <Label layoutX="25.0" layoutY="41.0" prefHeight="21.0" prefWidth="89.0" text="Имя задачи"/>
                        <Label fx:id="labelTaskTime" layoutX="159.0" layoutY="72.0" prefHeight="21.0" prefWidth="89.0"/>
                        <Label fx:id="labelTaskName" layoutX="159.0" layoutY="41.0" prefHeight="21.0" prefWidth="91.0"/>
                        <Label layoutX="92.0" text="Информация"/>
                    </children>
                </Pane>
                <VBox fx:id="boxEdit" prefHeight="239.0" prefWidth="175.0">
                    <children>
                        <Label alignment="CENTER" prefHeight="21.0" prefWidth="186.0" text="Редактировние"
                               textAlignment="CENTER"/>
                        <Button fx:id="buttonEditTask" mnemonicParsing="false" prefHeight="31.0" prefWidth="180.0"
                                text="Изменить">
                            <VBox.margin>
                                <Insets top="20.0"/>
                            </VBox.margin>
                        </Button>
                        <Button fx:id="buttonAddTask" mnemonicParsing="false" prefHeight="31.0" prefWidth="181.0"
                                text="Добавить">
                            <VBox.margin>
                                <Insets top="20.0"/>
                            </VBox.margin>
                        </Button>
                        <Button fx:id="buttonRemoveTask" mnemonicParsing="false" prefHeight="31.0" prefWidth="183.0"
                                text="Удалить">
                            <VBox.margin>
                                <Insets top="20.0"/>
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
